{
  "*.{js,jsx,ts,tsx,mjs,cjs,mts}": [
    "prettier --write",
    "eslint --fix",
    "eslint"
  ],
  "*.{json,md,yml,yaml,css,scss}": ["prettier --write"],
  ".storybook/**/*.{ts,tsx,js,jsx}": ["prettier --write", "eslint --fix"],
  "playwright.config.{ts,js}": ["prettier --write", "eslint --fix"],
  "vitest.config.{ts,js}": ["prettier --write", "eslint --fix"],
  "*.html": ["prettier --write"]
}
